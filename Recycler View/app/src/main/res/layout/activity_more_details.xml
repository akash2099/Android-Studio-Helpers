<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreDetailsActivity"
    >

    <ImageView
        android:id="@+id/logo_details_imageView"
        android:layout_width="238dp"
        android:layout_height="265dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/c_logo" />

    <TextView
        android:id="@+id/program_title_textView_details"
        android:layout_width="221dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#E91E63"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_details_imageView" />

    <TextView
        android:id="@+id/program_desc_details_textView"
        android:layout_width="317dp"
        android:layout_height="189dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="#0052F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/program_title_textView_details" />
</androidx.constraintlayout.widget.ConstraintLayout>